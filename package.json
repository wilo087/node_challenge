{
  "name": "stock",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "generate": "lerna run generate --stream",
    "migrate": "lerna run migrate --stream",
    "test": "lerna run test --stream",
    "lint": "eslint ./packages/** --ext .ts --quiet --cache --cache-location \".eslintcache/\"",
    "dev-service": "(cd packages/stock-service; yarn dev)",
    "start-service": "(cd packages/stock-service; yarn start)",
    "start-api": "(cd packages/stock-api; yarn start)",
    "dev-api": "(cd packages/stock-api; yarn dev)"
  },
  "dependencies": {
    "@stock/db": "0.0.1",
    "@stock/service": "0.0.1",
    "@stock/api": "0.0.1",
    "bcrypt": "5.1.0",
    "dotenv": "16.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv": "8.2.0",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "eslint": "8.38.0",
    "eslint-config-next": "13.2.4",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-promise": "6.1.1",
    "lerna": "^6.6.1",
    "standard": "17.0.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.2",
    "typescript": "5.0.4"
  },
  "ts-standard": {
    "eslint": "./node_modules/ts-standard/eslintrc.json"
  },
  "private": true
}